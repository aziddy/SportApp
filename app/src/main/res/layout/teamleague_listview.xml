<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="140dp" >

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/teamName"
                        android:textColor="#000000"
                        android:text="My Team Name"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"
                            >

                        <TextView
                            android:text="Wins:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/wins"
                                android:layout_marginLeft="5dp"
                                android:text="51"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:text="Losses:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/losses"
                                android:layout_marginLeft="5dp"
                                android:text="27"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:text="Standing:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/standing"
                                android:layout_marginLeft="5dp"
                                android:text="27"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                        <TextView
                            android:text="Next Match:"
                            android:textColor="#000000"
                            android:textStyle="bold|italic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />




                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >



                            <TextView
                                android:textColor="#000000"
                                android:lines="1"
                                android:layout_marginLeft="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vs."
                                android:textStyle="bold"
                                />

                            <LinearLayout
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:id="@+id/teamTwoNameText"
                                    android:textColor="#000000"
                                    android:singleLine="true"
                                    android:layout_marginLeft="4dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="The Hawksdddddddddddddd"
                                    />


                                <View
                                    android:id="@+id/teamTwoColor"
                                    android:layout_marginLeft="4dp"
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_width="15dp"
                                    android:background="@drawable/roundteamcolorboxsmall"
                                    android:layout_height="15dp"
                                    />
                            </LinearLayout>

                        </LinearLayout>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/matchTime"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4:15 PM"
                            />


                        <TextView
                            android:id="@+id/matchDate"
                            android:textColor="#000000"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wednesday, March 23rd, 2016"
                            />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </FrameLayout>

        <View
            android:id="@+id/teamColor"
            android:layout_gravity="right"
            android:layout_width="50dp"
            android:background="@drawable/roundteamcolorboxsmall"
            android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>

</FrameLayout>