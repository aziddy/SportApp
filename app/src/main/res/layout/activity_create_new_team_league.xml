<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexander.sportapp.CreateNewTeamLeague">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3dc100"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:padding="15dp"
        android:background="#3dc100"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_marginLeft="5.5dp"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Name"
                />

            <EditText
                android:id="@+id/LeagueNameEditText"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Example: Squash"
                android:textSize="30dp"
                android:singleLine="true"
                />

        </LinearLayout>
    </FrameLayout>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20.5dp"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Teammates"
            />






        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>




    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/testBtn"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Add Teammates"
            />

    </FrameLayout>


</RelativeLayout>
